@using PulseBridge.OpenIddict.Idp.Controllers
@model LoginVm
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PulseBridge Sign in</title>
    <style>
        :root {
            color-scheme: light dark;
            font-family: "Segoe UI", Arial, sans-serif;
        }

        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #1f2a40 0%, #2f3f60 50%, #182030 100%);
            color: #131722;
        }

        .login-wrapper {
            width: min(420px, 90vw);
            background: #ffffffee;
            padding: 2.75rem 3rem;
            border-radius: 18px;
            box-shadow: 0 24px 48px rgba(11, 18, 33, 0.25);
            backdrop-filter: blur(6px);
        }

        h1 {
            margin: 0 0 1.5rem;
            font-size: 1.9rem;
            color: #e2e8f0;
            text-align: center;
        }

        .field {
            display: flex;
            flex-direction: column;
            gap: 0.35rem;
            margin-bottom: 1.25rem;
            font-size: 0.95rem;
        }

        label {
            font-weight: 600;
            color: #1f2937;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"] {
            border: 1px solid #cbd5f5;
            border-radius: 10px;
            padding: 0.75rem 0.9rem;
            font-size: 1rem;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus {
            outline: none;
            border-color: #4c6ef5;
            box-shadow: 0 0 0 3px rgba(76, 110, 245, 0.25);
        }

        .remember-row {
            display: flex;
            align-items: center;
            gap: 0.55rem;
            margin-bottom: 1.75rem;
            font-size: 0.95rem;
            color: #313b52;
        }

        button[type="submit"] {
            width: 100%;
            border: none;
            border-radius: 999px;
            padding: 0.85rem;
            font-size: 1.05rem;
            font-weight: 600;
            letter-spacing: 0.02em;
            background: linear-gradient(120deg, #4f46e5 0%, #3b82f6 50%, #2563eb 100%);
            color: #fff;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        button[type="submit"]:hover {
            transform: translateY(-1px);
            box-shadow: 0 12px 24px rgba(37, 99, 235, 0.35);
        }

        button[type="submit"]:active {
            transform: translateY(0);
            box-shadow: 0 6px 16px rgba(37, 99, 235, 0.35);
        }

        .subtext {
            margin-top: 1.75rem;
            font-size: 0.85rem;
            text-align: center;
            color: #475569;
        }

        @@media (prefers-color-scheme: dark) {
            body {
                color: #e2e8f0;
            }

            .login-wrapper {
                background: #111827ee;
                color: inherit;
                box-shadow: 0 24px 48px rgba(8, 14, 28, 0.6);
            }

            label {
                color: #e2e8f0;
            }

            input[type="text"],
            input[type="email"],
            input[type="password"] {
                background: #0f172a;
                color: #e2e8f0;
                border-color: #1f2a40;
            }

            input[type="text"]:focus,
            input[type="email"]:focus,
            input[type="password"]:focus {
                border-color: #60a5fa;
                box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.3);
            }

            .remember-row {
                color: #cbd5f5;
            }
        }
    </style>
</head>
<body>
    <div class="login-wrapper">
        <h1>OpenIddict Identity Provider</h1>
        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="field">
                <label asp-for="UserName">Username or Email</label>
                <input asp-for="UserName" type="text" name="UserName" autocomplete="username" />
            </div>
            <div class="field">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" name="Password" autocomplete="current-password" />
            </div>
            <label class="remember-row">
                <input asp-for="RememberMe" type="checkbox" />
                <span>Remember me</span>
            </label>
            <button type="submit">Sign in</button>
        </form>
        <p class="subtext">
            Use your PulseBridge credentials to continue
        </p>
    </div>
</body>
</html>
